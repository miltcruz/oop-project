# Database provider: "sqlite" or "sqlserver"
DB_PROVIDER=sqlite

# If using SQLite, this is the path to your database file (optional if hardcoded)
SQLITE_DB_PATH=./data/oop.db

# If using SQL Server, full pyodbc connection string
# Example for SQL Server with SQL Authentication:
SQLSERVER_URL=DRIVER={ODBC Driver 18 for SQL Server};SERVER=server,1433;DATABASE=MyDb;UID=user;PWD=pass;Encrypt=yes;TrustServerCertificate=yes